<!DOCTYPE html>
<html lang="id">
<head>
    <%- include('partials/header') %>
</head>
<body class="background-section">
    <!-- Loading Spinner -->
    <div id="loader-wrapper">
        <div id="loader"></div>
    </div>
    <!-- Scroll Progress Bar -->
    <div id="scroll-progress-container">
        <div id="scroll-progress-bar"></div>
    </div>

<%- include('partials/user-navbar') %>

<main class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow rounded-4">
                <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2" style="color: var(--primary-color);"></i>Edit Biodata
                    </h5>
                    <a href="/user-biodata" class="btn btn-outline-custom btn-sm">
                        <i class="fas fa-arrow-left me-1"></i>Kembali
                    </a>
                </div>
                <div class="card-body">
                    <form id="formEditBiodata">
                        <div class="mb-3">
                            <label for="nama" class="form-label">Nama Lengkap</label>
                            <input type="text" class="form-control" id="nama" name="nama" value="Ridho" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="ridho@example.com" required>
                        </div>
                        <div class="mb-3">
                            <label for="hp" class="form-label">Nomor HP</label>
                            <input type="text" class="form-control" id="hp" name="hp" value="081234567890">
                        </div>
                        <div class="mb-3">
                            <label for="tgl_lahir" class="form-label">Tanggal Lahir</label>
                            <input type="date" class="form-control" id="tgl_lahir" name="tgl_lahir" value="2000-05-15">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Jenis Kelamin</label>
                            <select class="form-select" name="gender" id="gender">
                            <option value="Laki-laki" selected>Laki-laki</option>
                            <option value="Perempuan">Perempuan</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="alamat" class="form-label">Alamat</label>
                            <textarea class="form-control" id="alamat" name="alamat" rows="3">Jl. Merdeka No. 123, Jakarta</textarea>
                        </div>
                        <div class="mb-3">
                            <label for="pendidikan" class="form-label">Pendidikan Terakhir</label>
                            <input type="text" class="form-control" id="pendidikan" name="pendidikan" value="S1 Teknik Informatika">
                        </div>
                        <div class="mb-3">
                            <label for="pengalaman" class="form-label">Pengalaman Kerja</label>
                            <textarea class="form-control" id="pengalaman" name="pengalaman" rows="3">1 Tahun sebagai Front-End Developer di PT Contoh</textarea>
                        </div>
                        <div class="mb-3">
                            <label for="pasfoto" class="form-label">Pas Foto</label>
                            <input type="file" class="form-control" id="pasfoto" name="pasfoto" accept="image/*">
                            <!-- <label for="file-input" class="drop-container" id="drop-area">
                                <span class="drop-title">Letakkan file disini</span>
                                atau
                                <input type="file" accept="image/*" id="file-input" name="pasfoto">
                            </label> -->
                        </div>
                        <div class="mb-3">
                            <label for="cv" class="form-label">CV / Curriculum Vitae (PDF)</label>
                            <input type="file" class="form-control" id="cv" name="cv" accept=".pdf">
                            <!-- <label for="file-input" class="drop-container" id="drop-area">
                                <span class="drop-title">Letakkan file disini</span>
                                atau
                                <input type="file" accept=".pdf" id="file-input" name="cv"> -->
                            </label>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary-custom">
                                <i class="fas fa-save me-2"></i>Simpan
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
  
<!-- Tombol Back to Top -->
<button id="backToTop" title="Kembali ke atas">
    <i class="fas fa-chevron-up"></i>
</button>
  
<script>
    // Siapkan event listener untuk submit form
    document.getElementById('formEditBiodata').addEventListener('submit', function(e) {
      e.preventDefault();
      // Kode AJAX ke backend akan disiapkan di sini
      Swal.fire({
        icon: 'info',
        title: 'Belum Terhubung',
        text: 'Fungsi simpan belum terhubung ke API.',
        confirmButtonText: 'Okeh'
        });
    });
    
    // DROP FILES
    const dropArea = document.getElementById('drop-area');
    const fileInput = document.getElementById('file-input');

    // Hindari default browser behavior untuk seluruh dokumen
    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
        document.addEventListener(eventName, e => e.preventDefault());
    });

    // Tambahkan efek saat drag-over
    ['dragenter', 'dragover'].forEach(eventName => {
        dropArea.addEventListener(eventName, () => dropArea.classList.add('highlight'));
    });

    ['dragleave', 'drop'].forEach(eventName => {
        dropArea.addEventListener(eventName, () => dropArea.classList.remove('highlight'));
    });

    // Tangani file yang di-drop
    dropArea.addEventListener('drop', function (e) {
        const files = e.dataTransfer.files;
        if (files.length > 0) {
            const file = files[0];
            if (file.type.startsWith("image/")) {
                fileInput.files = files;
            } else {
                Swal.fire({
                icon: 'error',
                title: 'File Tidak Valid',
                text: 'Silakan unggah file gambar (jpg, png, dll)',
                });
            }
        }
    });
</script>
<script src="assets/user.js"></script>

<%- include('partials/footer') %>

</body>
</html>