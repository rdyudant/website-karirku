<!DOCTYPE html>
<html lang="id">
<head>
    <%- include('partials/header') %>
</head>
<body class="background-section">
    <!-- Loading Spinner -->
    <div id="loader-wrapper">
        <div id="loader"></div>
    </div>
    <!-- Scroll Progress Bar -->
    <div id="scroll-progress-container">
        <div id="scroll-progress-bar"></div>
    </div>

<%- include('partials/user-navbar') %>

<main class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow rounded-4">
                <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2" style="color: var(--primary-color);"></i>Perubahan Informasi
                    </h5>
                    <a href="/user-informasi" class="btn btn-outline-custom btn-sm">
                        <i class="fas fa-arrow-left me-1"></i>Kembali
                    </a>
                </div>
                <div class="card-body">
                    <form id="formEditInformasi">
                        <h6 class="fw-bold text-uppercase mb-3 mt-4 border-bottom pb-2">Informasi Pribadi</h6>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="ridho@example.com" required>
                        </div>
                        <div class="mb-3">
                            <label for="nama" class="form-label">Nama Lengkap</label>
                            <input type="text" class="form-control" id="nama" name="nama" value="Ridho" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Jenis Kelamin</label>
                            <select class="form-select" name="gender" id="gender">
                                <option value="Laki-laki" selected>Laki-laki</option>
                                <option value="Perempuan">Perempuan</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="hp" class="form-label">Nomor HP</label>
                            <input type="number" class="form-control" id="hp" name="hp" value="081234567890">
                        </div>
                        <div class="mb-3">
                            <label for="tempat_lahir" class="form-label">Tempat Lahir</label>
                            <input type="text" class="form-control" id="tempat_lahir" name="tempat_lahir">
                        </div>
                        <div class="mb-3">
                            <label for="tgl_lahir" class="form-label">Tanggal Lahir</label>
                            <input type="date" class="form-control" id="tgl_lahir" name="tgl_lahir" value="2000-05-15">
                        </div>
                        <div class="mb-3">
                            <label for="alamat" class="form-label">Alamat Lengkap</label>
                            <textarea class="form-control" id="alamat" name="alamat" rows="3">Jl. Merdeka No. 123, Jakarta</textarea>
                        </div>
                        <div class="mb-3">
                            <label for="desa" class="form-label">Desa/Kelurahan</label>
                            <input type="text" class="form-control" id="desa" name="desa">
                        </div>
                        <div class="mb-3">
                            <label for="kecamatan" class="form-label">Kecamatan</label>
                            <input type="text" class="form-control" id="kecamatan" name="kecamatan">
                        </div>
                        <div class="mb-3">
                            <label for="kabupaten" class="form-label">Kabupaten</label>
                            <input type="text" class="form-control" id="kabupaten" name="kabupaten">
                        </div>
                        <div class="mb-3">
                            <label for="agama" class="form-label">Agama</label>
                            <input type="text" class="form-control" id="agama" name="agama">
                        </div>
                        <div class="mb-3">
                            <label for="pendidikan" class="form-label">Pendidikan Terakhir</label>
                            <select class="form-select" id="pendidikan" name="pendidikan">
                                <option value="S3">S3</option>
                                <option value="S2">S2</option>
                                <option value="S1/D4" selected>S1/D4</option>
                                <option value="D3/D2/D1">D3/D2/D1</option>
                                <option value="SMA/SMK">SMA/SMK</option>
                                <option value="SMP">SMP</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="jurusan" class="form-label">Jurusan</label>
                            <input type="text" class="form-control" id="jurusan" name="jurusan" value="Informatika">
                        </div>
                        <div class="mb-3">
                            <label for="no_ktp" class="form-label">Nomor KTP</label>
                            <input type="number" class="form-control" id="no_ktp" name="no_ktp">
                        </div>
                        <div class="mb-3">
                            <label for="sertifikat" class="form-label">Sertifikat (opsional)</label>
                            <input type="text" class="form-control" id="sertifikat" name="sertifikat">
                        </div>
                        <div class="mb-3">
                            <label for="penempatan" class="form-label">Bersedia Ditempatkan di Purbalingga dan Sekitarnya?</label>
                            <select class="form-select" id="penempatan" name="penempatan">
                                <option value="Ya">Ya</option>
                                <option value="Tidak">Tidak</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="sumber" class="form-label">Darimana Anda Memperoleh Informasi Lowongan Pekerjaan?</label>
                            <select class="form-select" id="sumber" name="sumber">
                                <option value="Medsos Official" selected>Media Sosial Official HEW</option>
                                <option value="Medsos Lain">Media Sosial Lainnya</option>
                                <option value="Orang Lain">Saudara, Tetangga, Teman, dll</option>
                                <option value="Platform Loker">Glints, JobStreet, Lumina, dll</option>
                                <option value="JobFair">JobFair</option>
                                <option value="Media Cetak">Surat Kabar, Majalah, Brosur, dll</option>
                                <option value="Lainnya">Lainnya</option>
                            </select>
                        </div>

                        <h6 class="fw-bold text-uppercase mb-3 mt-5 border-bottom pb-2">
                            Pengalaman Kerja
                        </h6>
                        <div class="mb-3">
                            <label for="pengalaman" class="form-label">Pengalaman Kerja Sebelumnya</label>
                            <select class="form-select" id="pengalaman" name="pengalaman">
                                <option value=">5 Tahun (bidang yang sama)">>5 Tahun (bidang yang sama)</option>
                                <option value="3-5 Tahun (bidang yang sama)">3-5 Tahun (bidang yang sama)</option>
                                <option value="2-3 Tahun (bidang yang sama)">2-3 Tahun (bidang yang sama)</option>
                                <option value="1-2 Tahun (bidang yang sama)">1-2 Tahun (bidang yang sama)</option>
                                <option value="&lt;1 Tahun">&lt;1 Tahun</option>
                                <option value="Fresh Graduated" selected>Fresh Graduated</option>
                            </select>
                        </div>
                        <div id="pengalaman-wrapper" class="transition-wrapper">
                            <div class="mb-3">
                                <label for="pekerjaan_sebelumnya" class="form-label">Pekerjaan Sebelumnya</label>
                                <input type="text" class="form-control" id="pekerjaan_sebelumnya" name="pekerjaan_sebelumnya">
                            </div>
                            <div class="mb-3">
                                <label for="jabatan_sebelumnya" class="form-label">Jabatan / Posisi Sebelumnya</label>
                                <input type="text" class="form-control" id="jabatan_sebelumnya" name="jabatan_sebelumnya">
                            </div>
                            <div class="mb-3">
                                <label for="uraian_tugas" class="form-label">Uraian Tugas Pekerjaan Sebelumnya</label>
                                <textarea class="form-control" id="uraian_tugas" name="uraian_tugas" rows="3"></textarea>
                            </div>
                        </div>

                        <h6 class="fw-bold text-uppercase mb-3 mt-5 border-bottom pb-2">
                            Berkas Lamaran
                        </h6>
                        <div class="mb-3">
                            <label for="cv" class="form-label">CV / Curriculum Vitae (PDF)</label>
                            <input type="file" class="form-control" id="cv" name="cv" accept=".pdf">
                            <!-- <label for="file-input" class="drop-container" id="drop-area">
                                <span class="drop-title">Letakkan file disini</span>
                                atau
                                <input type="file" accept=".pdf" id="file-input" name="cv"> -->
                            </label>
                        </div>
                        <div class="mb-3">
                            <label for="ktp" class="form-label">Kartu Tanda Penduduk</label>
                            <input type="file" class="form-control" id="ktp" name="ktp">
                        </div>
                        <div class="mb-3">
                            <label for="ijazah" class="form-label">Ijazah Terakhir</label>
                            <input type="file" class="form-control" id="ijazah" name="ijazah">
                        </div>
                        <div class="mb-3">
                            <label for="kk" class="form-label">Kartu Keluarga</label>
                            <input type="file" class="form-control" id="kk" name="kk">
                        </div>
                        <div class="mb-3">
                            <label for="dokumen_lain" class="form-label">Surat / Dokumen Pendukung Lain</label>
                            <input type="file" class="form-control" id="dokumen_lain" name="dokumen_lain">
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary-custom">
                                <i class="fas fa-save me-2"></i>Simpan
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
  
<!-- Tombol Back to Top -->
<button id="backToTop" title="Kembali ke atas">
    <i class="fas fa-chevron-up"></i>
</button>
  
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Pengalaman Wrapper
        const pengalamanSelect = document.getElementById('pengalaman');
        const pengalamanWrapper = document.getElementById('pengalaman-wrapper');

        function togglePengalamanForm() {
        const val = pengalamanSelect.value.trim().toLowerCase();
        if (val === 'fresh graduated') {
            pengalamanWrapper.classList.add('hide');
        } else {
            pengalamanWrapper.classList.remove('hide');
        }
        }

        togglePengalamanForm(); // jalankan saat halaman dimuat
        pengalamanSelect.addEventListener('change', togglePengalamanForm);
    
        // Siapkan event listener untuk submit form
        const form = document.getElementById('formEditInformasi');
        if (form) {
            form.addEventListener('submit', function(e) {
            e.preventDefault();
            // Kode AJAX ke backend akan disiapkan di sini
            Swal.fire({
                icon: 'info',
                title: 'Belum Terhubung',
                text: 'Fungsi simpan belum terhubung ke API.',
                confirmButtonText: 'Okeh'
                });
            });
        }
    });

</script>

<script src="assets/user.js"></script>

<%- include('partials/footer') %>

</body>
</html>