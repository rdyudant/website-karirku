<%- include('partials/header') %>
<section class="background-section">

    <div class="signup-container" id="signup-container">
        <div class="signup-form-container signup-sign-up-container">
            <form class="signup-form" action="#">
                <h1>Create Account</h1>
                <div class="signup-social-container">
                    <a href="#" class="signup-social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="signup-social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="signup-social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span>or use your email for registration</span>
                <input type="text" class="signup-input" placeholder="Name" />
                <input type="email" class="signup-input" placeholder="Email" />
                <input type="password" class="signup-input" placeholder="Password" />
                <button class="signup-button">Sign Up</button>
            </form>
        </div>
        <div class="signup-form-container signup-sign-in-container">
            <form class="signup-form" action="#">
                <h1>Sign in</h1>
                <div class="signup-social-container">
                    <a href="#" class="signup-social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="signup-social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="signup-social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span>or use your account</span>
                <input type="email" class="signup-input" placeholder="Email" />
                <input type="password" class="signup-input" placeholder="Password" />
                <a href="#">Forgot your password?</a>
                <button class="signup-button">Sign In</button>
            </form>
        </div>
        <div class="signup-overlay-container">
            <div class="signup-overlay">
                <div class="signup-overlay-panel signup-overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button class="signup-button ghost" id="signIn">Sign In</button>
                </div>
                <div class="signup-overlay-panel signup-overlay-right">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start journey with us</p>
                    <button class="signup-button ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>

</section>
<%- include('partials/footer') %>
